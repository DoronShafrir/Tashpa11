﻿@using Microsoft.AspNetCore.Http
@{
    var sessionValue = Context.Session.GetString("Username");
    var sessionAdmin = Context.Session.GetString("Admin");
    var sessionFirst = Context.Session.GetString("Admin");

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tashpa11</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Tashpa11.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Tashpa11</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                    </ul>
                    <div class="dropdown d-inline-flex justify-content-around">
                        <a class="btn  dropdown-toggle text-dark " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> Login</a>
                        <ul class="dropdown-menu">
                            <li><a class="nav-link text-dark" href="~/Login/Login">Login</a></li>
                            <li><a class="nav-link text-dark" href="~/Login/LogUp">LogUp</a></li>
                            <li><a class="nav-link text-dark" href="~/Login/Exit">Exit</a></li>
                        </ul>
                    </div>
                    <div class="dropdown user-only">
                        <a class="btn  dropdown-toggle text-dark " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> Students </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="~/Students/MangeMyCourses">Manage Students</a></li>
                        </ul>
                    </div>
                    <div class="dropdown user-admin">
                        <a class="btn  dropdown-toggle text-dark " href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> Courses</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="~/Courses/ManageCourses">Manage Courses</a></li>
                        </ul>
                    </div>
                    <ul>
                        <li class="nav-item">
                            <a class="btn nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        
    </footer>
    
        @if (!string.IsNullOrEmpty(sessionValue))
        {
            <script>
                const userOnlyElements = document.querySelectorAll(".user-only");
                userOnlyElements.forEach(element => {
                    element.style.display = 'block';
                });
            </script>
        }
        @if (string.IsNullOrEmpty(sessionValue))
        {
            <script>
                const userOnlyElements = document.querySelectorAll(".user-only");
                userOnlyElements.forEach(element => {
                    element.style.display = 'none';
                });
            </script>
        }
        @if (sessionAdmin == "Admin")
        {
            <script>
                const adminOnlyElements = document.querySelectorAll(".user-admin");
                adminOnlyElements.forEach(element => {
                    element.style.display = 'block';
                });
            </script>
        }
        @if (sessionAdmin != "Admin")
        {
            <script>
                const adminOnlyElements = document.querySelectorAll(".user-admin");
                adminOnlyElements.forEach(element => {
                    element.style.display = 'none';
                });
            </script>
        }
    

    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>